<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="www.foxcoders.com.photoclubbingme.ShowCaseActivity">

    <include
        android:id="@+id/showCaseToolbar"
        layout="@layout/toolbar" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/showCase"
        android:layout_below="@+id/showCaseToolbar"
        android:layout_above="@+id/navLay"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/unnamed"
        android:adjustViewBounds="true"
        app:riv_corner_radius="12dp" />
    <RelativeLayout
        android:id="@+id/hideMask"
        android:visibility="gone"
        android:layout_below="@+id/showCaseToolbar"
        android:layout_above="@id/navLay"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#ffffff"
            android:adjustViewBounds="true"
            app:riv_corner_radius="12dp" />

        <ImageView
            android:src="@drawable/ic_visibility_off"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/colorAccent"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/navLay"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <include layout="@layout/bottom_nav"
            />
    </LinearLayout>

</RelativeLayout>
