<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#00ffffff"
    android:elevation="0dp"
    android:gravity="center_horizontal"
    app:cardCornerRadius="7dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/roundedImage1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/flower"
            app:riv_corner_radius_top_left="7dp"
            app:riv_corner_radius_top_right="7dp" />


        <TextView
            android:id="@+id/imgLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/roundedImage1"
            android:layout_alignStart="@+id/roundedImage1"
            android:layout_below="@+id/roundedImage1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/location"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/roundedImage1"
            android:layout_alignStart="@+id/roundedImage1"
            android:layout_below="@+id/imgLocation"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/number"
            android:textColor="@color/colorText"
            android:textSize="12sp"
            android:textStyle="italic" />

    </RelativeLayout>

</android.support.v7.widget.CardView>